	<% if (config.website){ %>
        <a href='<%- config.website %>' target="_blank"><%- config.author %></a>
	<% } else { %>
	    <a href="/"><%- config.author %></a>
	<% } %>
	
	<% if (theme.busuanzi){ %>
		|
		<span id="busuanzi_container_site_pv">
			pv
